    <RecipeDef ParentName="SurgeryFlesh">
        <defName>PFInstallVATS</defName>
        <label>Install VATS Implant</label>
        <description>Installs a VATS Implant.</description>
        <workerClass>Recipe_InstallImplant</workerClass>
        <jobString>Installing VATS Implant</jobString>
        <recipeUsers>
            <li>Human</li>
        </recipeUsers>
        <workAmount>2000</workAmount>
        <ingredients>
            <li>
                <filter>
                    <categories>
                        <li>Medicine</li>
                    </categories>
                </filter>
                <count>1</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>PFVATSImplant</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <categories>
                <li>Medicine</li>
            </categories>
            <thingDefs>
                <li>PFVATSImplant</li>
            </thingDefs>
        </fixedIngredientFilter>
        <appliedOnFixedBodyParts>
            <li>Brain</li>
        </appliedOnFixedBodyParts>
        <addsHediff>PFVATS</addsHediff>
    </RecipeDef>

