<?xml version="1.0" encoding="UTF-8"?>
<Defs>
    <ThingDef Abstract="True" Name="PFImplantBase">
        <label>Implant</label>
        <thingClass>ThingWithComps</thingClass>
        <category>Item</category>
        <useHitPoints>true</useHitPoints>
        <selectable>true</selectable>
        <statBases>
            <MaxHitPoints>50</MaxHitPoints>
            <Flammability>1.0</Flammability>
        </statBases>
        <altitudeLayer>Item</altitudeLayer>
        <tickerType>Never</tickerType>
        <alwaysHaulable>true</alwaysHaulable>
        <isTechHediff>true</isTechHediff>
        <techLevel>Spacer</techLevel>
        <tradeTags>
            <li>TechHediff</li>
        </tradeTags>
        <comps>
            <li Class="CompProperties_Forbiddable"/>
        </comps>
        <thingCategories>
            <li>BodyPartsArtificial</li>
        </thingCategories>
        <pathCost>10</pathCost>
    </ThingDef>

    <ThingDef ParentName="PFImplantBase">
        <defName>PFVATSImplant</defName>
        <label>VATS Implant</label>
        <description>A variation of the VaultTec Assisted Targeting System that is implanted directly into the user's
            brain.</description>
        <graphicData>
            <texPath>Things/Fallout/Implants/Implant</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <statBases>
            <MarketValue>3250</MarketValue>
            <Mass>1</Mass>
        </statBases>
        <techHediffsTags>
            <li>Advanced</li>
        </techHediffsTags>
    </ThingDef>

    <ThingDef ParentName="PFImplantBase">
        <defName>PFAgilityImplant</defName>
