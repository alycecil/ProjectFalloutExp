    </ThingDef>

    <ThingDef ParentName="BaseHumanMakeableGun">
        <defName>Gun_PFJunkjet</defName>
        <label>Junkjet</label>
        <description>A slightly less makeshift cannon that fires literal junk at high velocities</description>
        <graphicData>
            <texPath>Things/Fallout/Weapons/Guns/JunkJet</texPath>
