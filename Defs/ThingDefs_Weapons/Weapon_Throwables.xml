			<shaderType>Transparent</shaderType>
		</graphicData>
		<projectile>
			<speed>12</speed>
			<flyOverhead>false</flyOverhead>
		</projectile>
	</ThingDef>

	<ThingDef ParentName="BaseGrenadeProjectile">
		<defName>Proj_PFThrowableDynamite</defName>
