	<ThingDef ParentName="BaseMeleeWeapon_Sharp">
		<defName>PFShishkebab</defName>
		<label>Shishkebab</label>
		<description>A makeshift 'flaming sword', with a dual purpose for cooking kebabs!</description>
		<graphicData>
			<texPath>Things/Fallout/Weapons/Melee/Shishkebab</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<equippedAngleOffset>-65</equippedAngleOffset>
		<costList>
			<Steel>75</Steel>
			<ComponentIndustrial>4</ComponentIndustrial>
		</costList>
		<soundInteract>InteractShishkebab</soundInteract>
		<statBases>
			<WorkToMake>24000</WorkToMake>
			<Mass>1.35</Mass>
			<MarketValue>180</MarketValue>
		</statBases>
		<tools>
			<li>
				<label>handle</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>5</power>
				<cooldownTime>1.8</cooldownTime>
			</li>
			<li>
				<label>point</label>
				<capacities>
					<li>PFShishDamage</li>
				</capacities>
				<power>10</power>
				<cooldownTime>1.8</cooldownTime>
			</li>
			<li>
				<label>edge</label>
				<capacities>
					<li>PFShishDamage</li>
				</capacities>
				<power>12</power>
				<cooldownTime>1.8</cooldownTime>
			</li>
		</tools>
		<recipeMaker>
			<researchPrerequisite>LongBlades</researchPrerequisite>
		</recipeMaker>
	</ThingDef>
	
	<ThingDef ParentName="BaseMeleeWeapon_Sharp">
		<defName>PFRipper</defName>
		<label>Ripper</label>
		<description>A handheld chainsaw-like device used for "ripping" through unarmored and lightly armored targets.</description>
		<graphicData>
			<texPath>Things/Fallout/Weapons/Melee/Ripper</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<equippedAngleOffset>-65</equippedAngleOffset>
		<costList>
