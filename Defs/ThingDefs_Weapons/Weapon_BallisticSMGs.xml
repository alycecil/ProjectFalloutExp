    <ThingDef ParentName="BaseHumanMakeableGun">
        <defName>Gun_PF9mmSMG</defName>
        <label>9mm SMG</label>
        <description>A small fast firing inaccurate submachine gun, used more for spray-and-pray tactics than for any
            accurate shooting.
        </description>
        <graphicData>
            <texPath>Things/Fallout/Weapons/Guns/9mmSMG</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <statBases>
            <WorkToMake>27000</WorkToMake>
            <MarketValue>320</MarketValue>
            <Mass>1.8</Mass>
            <AccuracyTouch>0.75</AccuracyTouch>
            <AccuracyShort>0.5</AccuracyShort>
            <AccuracyMedium>0.33</AccuracyMedium>
            <AccuracyLong>0.12</AccuracyLong>
            <RangedWeapon_Cooldown>0.75</RangedWeapon_Cooldown>
        </statBases>
        <costList>
            <Steel>40</Steel>
            <ComponentIndustrial>3</ComponentIndustrial>
        </costList>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>Bullet_PF9mmSMG</defaultProjectile>
                <warmupTime>0.45</warmupTime>
                <range>23</range>
                <burstShotCount>5</burstShotCount>
                <ticksBetweenBurstShots>5</ticksBetweenBurstShots>
                <soundCast>Shot_Minigun</soundCast>
                <!-- Above is a Placeholder Sound -->
                <soundCastTail>GunTail_Light</soundCastTail>
                <muzzleFlashScale>9</muzzleFlashScale>
            </li>
        </verbs>

    </ThingDef>

