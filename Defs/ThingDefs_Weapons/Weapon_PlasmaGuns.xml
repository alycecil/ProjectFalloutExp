    <ThingDef ParentName="BaseLaserMakeableGun">
        <defName>PFPlasma_Pistol</defName>
        <label>Plasma Pistol</label>
        <description>A pistol that fires deadly superheated plasma propelled down a superconducted shaft.</description>
        <graphicData>
            <texPath>Things/Fallout/Weapons/Guns/PlasmaPistol</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <soundInteract>InteractPlasmaPistol</soundInteract>
        <statBases>
            <WorkToMake>110000</WorkToMake>
            <MarketValue>1050</MarketValue>
            <Mass>1.35</Mass>
            <AccuracyTouch>0.91</AccuracyTouch>
            <AccuracyShort>0.75</AccuracyShort>
            <AccuracyMedium>0.52</AccuracyMedium>
            <AccuracyLong>0.35</AccuracyLong>
            <RangedWeapon_Cooldown>1.6</RangedWeapon_Cooldown>
        </statBases>
        <costList>
            <Steel>35</Steel>
            <ComponentIndustrial>4</ComponentIndustrial>
            <PFSuperconductor>1</PFSuperconductor>
        </costList>
        <recipeMaker>
            <researchPrerequisite>PFEnergyWeapons</researchPrerequisite>
        </recipeMaker>
        <techLevel>Spacer</techLevel>
        <weaponTags>
            <li>AdvancedGun</li>
        </weaponTags>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>Bullet_PFPlasmaPistol</defaultProjectile>
                <warmupTime>0.80</warmupTime>
                <range>28</range>
                <soundCast>ShotPlasmaPistol</soundCast>
                <muzzleFlashScale>9</muzzleFlashScale>
            </li>
        </verbs>
    </ThingDef>

