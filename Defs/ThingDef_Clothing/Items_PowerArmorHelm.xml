<?xml version="1.0" encoding="UTF-8"?>

<Defs>

    <ThingDef Abstract="True" ParentName="ApparelBase" Name="HatBase">
        <thingCategories>
            <li>Headgear</li>
        </thingCategories>
    </ThingDef>

    <ThingDef Abstract="True" ParentName="ApparelMakeableBase" Name="HatMakeableBase">
        <thingCategories>
            <li>Headgear</li>
        </thingCategories>
    </ThingDef>

    <ThingDef Abstract="True" ParentName="ArmorMakeableBase" Name="ArmorHelmetMakeableBase">
        <thingCategories>
            <li>Headgear</li>
        </thingCategories>
    </ThingDef>

    <ThingDef ParentName="ArmorHelmetMakeableBase">
        <defName>Apparel_X-01_Helmet</defName>
        <label>X-01 Power Armor Helmet</label>
        <description>A post-war power armor helmet developed by the Enclave</description>
        <techLevel>Spacer</techLevel>
        <recipeMaker>
            <researchPrerequisite>PFAdvancedPowerArmor</researchPrerequisite>
        </recipeMaker>
        <graphicData>
            <texPath>Things/Fallout/Apparel/PowerArmor/X-01/Helmet/X-01Helm_front</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <statBases>
            <WorkToMake>75000</WorkToMake>
            <Mass>1.5</Mass>
            <MaxHitPoints>300</MaxHitPoints>
            <MarketValue>3250</MarketValue>
            <ArmorRating_Blunt>0.5</ArmorRating_Blunt>
            <ArmorRating_Sharp>0.75</ArmorRating_Sharp>
            <ArmorRating_Heat>0.8</ArmorRating_Heat>
            <Insulation_Cold>-6</Insulation_Cold>
            <Insulation_Heat>6</Insulation_Heat>
        </statBases>
        <equippedStatOffsets>
            <MoveSpeed>-0.15</MoveSpeed>
            <PsychicSensitivity>-0.25</PsychicSensitivity>
            <ToxicSensitivity>-0.2</ToxicSensitivity>
        </equippedStatOffsets>
        <costList>
            <ComponentIndustrial>12</ComponentIndustrial>
            <ComponentSpacer>1</ComponentSpacer>
            <Plasteel>125</Plasteel>
        </costList>
        <apparel>
            <bodyPartGroups>
                <li>FullHead</li>
            </bodyPartGroups>
            <wornGraphicPath>Things/Fallout/Apparel/PowerArmor/X-01/Helmet/X-01Helm</wornGraphicPath>
            <layers>
                <li>Overhead</li>
            </layers>
            <tags>
                <li>Military</li>
                <li>Enclave</li>
            </tags>
            <defaultOutfitTags>
                <li>Soldier</li>
            </defaultOutfitTags>
        </apparel>

    </ThingDef>

    <ThingDef ParentName="ArmorHelmetMakeableBase">
        <defName>Apparel_RaiderPA_Helmet</defName>
