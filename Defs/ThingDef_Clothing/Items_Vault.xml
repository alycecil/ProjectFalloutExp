<Defs>

    <ThingDef ParentName="ApparelMakeableBase">
        <defName>Apparel_VaultJumpsuit</defName>
        <label>Vault Jumpsuit</label>
        <description>The standard Vault-Tec jumpsuit worn by Vault Dwellers.</description>
        <graphicData>
            <texPath>Things/Fallout/Apparel/VaultJumpsuit/Standard/Vaultsuit_Male_front</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <techLevel>Spacer</techLevel>
        <recipeMaker>
            <researchPrerequisite>PFabricAug</researchPrerequisite>
        </recipeMaker>
        <costList>
            <Synthread>80</Synthread>
        </costList>
        <thingCategories>
            <li>Apparel</li>
        </thingCategories>
        <statBases>
            <Flammability>1</Flammability>
            <Mass>0.45</Mass>
            <MarketValue>750</MarketValue>
            <WorkToMake>20000</WorkToMake>
            <ArmorRating_Heat>0.5</ArmorRating_Heat>
            <Insulation_Cold>-5</Insulation_Cold>
            <Insulation_Heat>5</Insulation_Heat>
        </statBases>
        <equippedStatOffsets>
            <TradePriceImprovement>0.1</TradePriceImprovement>
            <NegotiationAbility>0.05</NegotiationAbility>
            <SocialImpact>0.1</SocialImpact>
        </equippedStatOffsets>
        <apparel>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Shoulders</li>
                <li>Arms</li>
                <li>Legs</li>
            </bodyPartGroups>
            <wornGraphicPath>Things/Fallout/Apparel/VaultJumpsuit/Standard/Vaultsuit</wornGraphicPath>
            <layers>
                <li>OnSkin</li>
            </layers>
            <tags>
                <li>PFVault</li>
                <li>PFVaultSec</li>
            </tags>
            <defaultOutfitTags>
                <li>Worker</li>
            </defaultOutfitTags>
        </apparel>

    </ThingDef>


