<?xml version="1.0" encoding="UTF-8"?>

<Defs>

    <ThingDef ParentName="PlantBase">
        <defName>PFPlantTato</defName>
        <label>Tato Plant</label>
        <description>A mutated hybrid of potatoes and tomatoes. It tastes horrible raw, and not much better cooked, but
            in the wasteland you can't complain.</description>
        <statBases>
            <MaxHitPoints>120</MaxHitPoints>
            <Nutrition>0.05</Nutrition>
        </statBases>
        <graphicData>
            <texPath>Things/Fallout/Plants/TatoPlant</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <selectable>true</selectable>
        <pathCost>15</pathCost>
        <ingestible/>
        <plant>
            <fertilitySensitivity>0.5</fertilitySensitivity>
            <dieIfLeafless>true</dieIfLeafless>
            <harvestTag>Standard</harvestTag>
            <harvestedThingDef>PFRawTatos</harvestedThingDef>
            <harvestYield>10</harvestYield>
            <sowTags>
                <li>Ground</li>
                <li>Hydroponic</li>
            </sowTags>
            <topWindExposure>0.1</topWindExposure>
            <growDays>3.25</growDays>
            <visualSizeRange>
                <min>0.3</min>
                <max>1.05</max>
            </visualSizeRange>
            <purpose>Food</purpose>
        </plant>
    </ThingDef>

