<Defs>

    <ThingDef ParentName="PlantBase">
        <defName>PFPlantWildRazorgrain</defName>
        <label>Wild Razorgrain Plant</label>
        <description>A distant descendant of wheat, it is able to grow in the harsh wasteland</description>
        <statBases>
            <MaxHitPoints>100</MaxHitPoints>
            <Nutrition>0.05</Nutrition>
        </statBases>
        <graphicData>
            <texPath>Things/Fallout/Plants/RazorgrainPlant</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <selectable>true</selectable>
        <pathCost>10</pathCost>
        <ingestible/>
        <plant>
            <fertilitySensitivity>0.75</fertilitySensitivity>
            <dieIfLeafless>true</dieIfLeafless>
            <harvestYield>12</harvestYield>
            <harvestWork>600</harvestWork>
            <harvestTag>Standard</harvestTag>
            <harvestAfterGrowth>0.30</harvestAfterGrowth>
            <fertilityMin>0.5</fertilityMin>
            <harvestedThingDef>PFRazorgrain</harvestedThingDef>
            <wildCommonalityMaxFraction>2.0</wildCommonalityMaxFraction>
            <wildClusterSizeRange>
                <min>1</min>
                <max>3</max>
            </wildClusterSizeRange>
            <wildClusterRadius>3</wildClusterRadius>
            <topWindExposure>0.1</topWindExposure>
            <growDays>3.5</growDays>
            <visualSizeRange>
                <min>0.25</min>
                <max>1.2</max>
            </visualSizeRange>
            <purpose>Food</purpose>
        </plant>
    </ThingDef>

