    <TraitDef>
        <defName>PFCarrying</defName>
        <commonality>0.5</commonality>
        <degreeDatas>
            <li>
                <label>Small Frame</label>
                <description>NAME has a small build, and while they can move quickly, they are physically weaker.
                </description>
                <degree>-1</degree>
                <skillGains>
                    <li>
                        <key>Melee</key>
                        <value>-2</value>
                    </li>
                </skillGains>
                <statOffsets>
                    <MoveSpeed>0.2</MoveSpeed>
                    <CarryingCapacity>-25</CarryingCapacity>
                </statOffsets>
                <randomMentalState>SadisticRage</randomMentalState>
                <randomMentalStateMtbDaysMoodCurve>
                    <points>
                        <li>(0, 7.5)</li>
                        <li>(50, 25)</li>
                        <li>(100, 50)</li>
                    </points>
                </randomMentalStateMtbDaysMoodCurve>
            </li>
            <li>
                <label>Strong Back</label>
                <description>NAME is pretty strong, and it helps them carry things around.</description>
                <degree>1</degree>
                <skillGains>
                    <li>
                        <key>Melee</key>
                        <value>1</value>
                    </li>
                </skillGains>
                <statOffsets>
                    <CarryingCapacity>25</CarryingCapacity>
                </statOffsets>
            </li>
            <li>
                <label>Pack Rat</label>
                <description>NAME may as well have built-in pockets. They can carry much more stuff than a typical
                    person.
                </description>
                <degree>2</degree>
                <statOffsets>
                    <CarryingCapacity>50</CarryingCapacity>
                </statOffsets>
            </li>
        </degreeDatas>
    </TraitDef>

    <TraitDef>
        <defName>PFWhiskeyRose</defName>
        <commonality>0.25</commonality>
