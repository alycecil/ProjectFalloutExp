<?xml version="1.0" encoding="UTF-8"?>

<Defs>

    <ThingDef ParentName="AnimalThingBase">
        <defName>PFMoleRat</defName>
        <label>Mole Rat</label>
        <description>A giant genetically engineered naked mole rat. Their massive teeth can bite through solid bone or
            metal.</description>
        <statBases>
            <MoveSpeed>3.75</MoveSpeed>
            <ComfyTemperatureMin>-20</ComfyTemperatureMin>
            <MarketValue>100</MarketValue>
        </statBases>
        <tools>
            <li>
                <capacities>
                    <li>Bite</li>
                </capacities>
                <power>10</power>
                <cooldownTime>2.2</cooldownTime>
                <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
                <chanceFactor>0.7</chanceFactor>
            </li>
            <li>
                <label>right claw</label>
                <capacities>
                    <li>Scratch</li>
                </capacities>
                <power>6</power>
                <cooldownTime>1.95</cooldownTime>
                <linkedBodyPartsGroup>FrontRightPaw</linkedBodyPartsGroup>
            </li>
            <li>
                <label>left claw</label>
                <capacities>
                    <li>Scratch</li>
                </capacities>
                <power>6</power>
                <cooldownTime>1.95</cooldownTime>
                <linkedBodyPartsGroup>FrontLeftPaw</linkedBodyPartsGroup>
            </li>
            <li>
                <label>head</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>4</power>
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
                <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
                <chanceFactor>0.2</chanceFactor>
            </li>
        </tools>
        <race>
            <body>QuadrupedAnimalWithPaws</body>
            <baseBodySize>0.4</baseBodySize>
            <baseHungerRate>0.3</baseHungerRate>
            <baseHealthScale>0.5</baseHealthScale>
            <foodType>OmnivoreRoughAnimal</foodType>
            <leatherDef>Leather_Light</leatherDef>
            <gestationPeriodDays>20</gestationPeriodDays>
            <wildness>0.75</wildness>
            <trainability>Simple</trainability>
            <meatLabel>rat meat</meatLabel>
            <wildBiomes>
                <AridShrubland>0.1</AridShrubland>
                <TemperateForest>0.15</TemperateForest>
                <Desert>0.05</Desert>
            </wildBiomes>
            <litterSizeCurve>
                <points>
                    <li>(0.5,0)</li>
                    <li>(1,1)</li>
                    <li>(5,1)</li>
                    <li>(5.5,0)</li>
                </points>
            </litterSizeCurve>
            <packAnimal>true</packAnimal>
            <lifeExpectancy>10</lifeExpectancy>
            <lifeStageAges>
                <li>
                    <def>AnimalBaby</def>
                    <minAge>0</minAge>
                </li>
                <li>
                    <def>AnimalJuvenile</def>
                    <minAge>0.125</minAge>
                </li>
                <li>
                    <def>AnimalAdult</def>
                    <minAge>0.33</minAge>
                    <soundWounded>Pawn_Boomrat_Wounded</soundWounded>
                    <soundDeath>Pawn_Boomrat_Death</soundDeath>
                    <soundCall>Pawn_Boomrat_Call</soundCall>
                    <soundAngry>Pawn_Boomrat_Angry</soundAngry>
                </li>
            </lifeStageAges>
            <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
            <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
            <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
        </race>
        <tradeTags>
            <li>AnimalCommon</li>
        </tradeTags>
    </ThingDef>

    <PawnKindDef ParentName="AnimalKindBase">
        <defName>PFMoleRat</defName>
        <label>Mole Rat</label>
        <race>PFMoleRat</race>
        <combatPower>45</combatPower>
        <ecoSystemWeight>0.25</ecoSystemWeight>
        <lifeStages>
            <li>
                <bodyGraphicData>
                    <texPath>Things/Fallout/Animals/MoleRat/MoleRat</texPath>
                    <drawSize>1.25</drawSize>
                    <shaderType>CutoutComplex</shaderType>
                </bodyGraphicData>
                <dessicatedBodyGraphicData>
                    <texPath>Things/Pawn/Animal/Dessicated/CritterDessicatedSmall</texPath>
                    <drawSize>1</drawSize>
                </dessicatedBodyGraphicData>
            </li>
            <li>
                <bodyGraphicData>
                    <texPath>Things/Fallout/Animals/MoleRat/MoleRat</texPath>
                    <drawSize>1.1</drawSize>
                    <shaderType>CutoutComplex</shaderType>
                </bodyGraphicData>
                <dessicatedBodyGraphicData>
                    <texPath>Things/Pawn/Animal/Dessicated/CritterDessicatedSmall</texPath>
                    <drawSize>1.1</drawSize>
                </dessicatedBodyGraphicData>
            </li>
            <li>
                <bodyGraphicData>
                    <texPath>Things/Fallout/Animals/MoleRat/MoleRat</texPath>
                    <drawSize>1.25</drawSize>
                    <shaderType>CutoutComplex</shaderType>
                </bodyGraphicData>
                <dessicatedBodyGraphicData>
                    <texPath>Things/Pawn/Animal/Dessicated/CritterDessicatedSmall</texPath>
                    <drawSize>1.25</drawSize>
                </dessicatedBodyGraphicData>
            </li>
        </lifeStages>
    </PawnKindDef>

</Defs>