    <ThingDef ParentName="BasePFInsect">
        <defName>PFRadroach</defName>
        <label>Radroach</label>
        <description>A giant mutated cockroach. While not much of a threat, in a swarm they are a massive danger to
            those without explosives.
        </description>
        <statBases>
            <MoveSpeed>5</MoveSpeed>
            <ComfyTemperatureMin>-40</ComfyTemperatureMin>
            <MarketValue>120</MarketValue>
            <LeatherAmount>0</LeatherAmount>
            <ArmorRating_Blunt>0.15</ArmorRating_Blunt>
            <ArmorRating_Sharp>0.35</ArmorRating_Sharp>
        </statBases>
        <tools>
            <li>
                <label>mandibles</label>
                <capacities>
                    <li>Bite</li>
                </capacities>
                <power>5</power>
                <cooldownTime>1.8</cooldownTime>
                <linkedBodyPartsGroup>Mouth</linkedBodyPartsGroup>
            </li>
            <li>
                <label>head</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>4</power>
                <cooldownTime>1.8</cooldownTime>
                <linkedBodyPartsGroup>HeadAttaclTool</linkedBodyPartsGroup>
                <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
                <chanceFactor>0.1</chanceFactor>
            </li>
        </tools>
        <race>
            <body>BeetleLike</body>
            <baseHungerRate>0.1</baseHungerRate>
            <baseBodySize>0.25</baseBodySize>
            <baseHealthScale>0.66</baseHealthScale>
            <gestationPeriodDays>6</gestationPeriodDays>
            <useMeatFrom>Megaspider</useMeatFrom>
            <trainability>Simple</trainability>
            <wildness>0.95</wildness>
            <lifeExpectancy>30</lifeExpectancy>
            <wildBiomes>
                <AridShrubland>0.05</AridShrubland>
                <TemperateForest>0.05</TemperateForest>
                <Desert>0.05</Desert>
                <ExtremeDesert>0.05</ExtremeDesert>
            </wildBiomes>
            <lifeStageAges>
                <li>
                    <def>EusocialInsectLarva</def>
                    <minAge>0</minAge>
                </li>
                <li>
                    <def>EusocialInsectJuvenile</def>
                    <minAge>0.1</minAge>
                </li>
                <li>
                    <def>EusocialInsectAdult</def>
                    <minAge>0.3</minAge>
                    <soundWounded>Pawn_Megascarab_Wounded</soundWounded>
                    <soundDeath>Pawn_Megascarab_Death</soundDeath>
                    <soundCall>Pawn_Megascarab_Call</soundCall>
                    <soundAngry>Pawn_Megascarab_Angry</soundAngry>
                </li>
            </lifeStageAges>
            <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
            <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
            <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
        </race>
        <tradeTags>
            <li>AnimalInsect</li>
        </tradeTags>
    </ThingDef>

