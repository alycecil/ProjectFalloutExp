    <ThingDef ParentName="AnimalThingBase">
        <defName>PFBrahmin</defName>
        <label>Brahmin</label>
        <description>A distant descendent of cows, this two-headed mutated bovine is used for meat and milk in the
            wasteland.
        </description>
        <statBases>
            <MoveSpeed>3</MoveSpeed>
            <ComfyTemperatureMin>-18</ComfyTemperatureMin>
            <MarketValue>375</MarketValue>
        </statBases>
        <comps>
            <li Class="CompProperties_Milkable">
                <milkDef>Milk</milkDef>
                <milkIntervalDays>1</milkIntervalDays>
                <milkAmount>10</milkAmount>
            </li>
        </comps>
        <tools>
            <li>
                <capacities>
                    <li>Bite</li>
                </capacities>
                <defaultCooldownTime>2.4</defaultCooldownTime>
                <power>8</power>
                <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
                <chanceFactor>0.6</chanceFactor>
            </li>
            <li>
                <label>horn</label>
                <capacities>
                    <li>Blunt</li>
                    <li>Poke</li>
                </capacities>
                <power>10</power>
                <cooldownTime>2.5</cooldownTime>
                <linkedBodyPartsGroup>HornAttackTool</linkedBodyPartsGroup>
                <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
                <chanceFactor>0.3</chanceFactor>
            </li>
            <li>
                <label>left hoof</label>
                <capacities>
                    <li>Blunt</li>
                    <li>Poke</li>
                </capacities>
                <power>8</power>
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>FrontLeftLeg</linkedBodyPartsGroup>
            </li>
            <li>
                <label>right hoof</label>
                <capacities>
                    <li>Blunt</li>
                    <li>Poke</li>
                </capacities>
                <power>8</power>
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>FrontRightLeg</linkedBodyPartsGroup>
            </li>
        </tools>
        <race>
            <body>QuadrupedAnimalWithTwoHeadsHoovesAndHorn</body>
            <herdAnimal>true</herdAnimal>
            <baseBodySize>1.75</baseBodySize>
            <baseHungerRate>0.8</baseHungerRate>
            <baseHealthScale>1.75</baseHealthScale>
            <foodType>VegetarianRoughAnimal</foodType>
            <leatherDef>Leather_Plain</leatherDef>
            <wildness>0.1</wildness>
            <gestationPeriodDays>55</gestationPeriodDays>
            <lifeExpectancy>25</lifeExpectancy>
            <trainability>Advanced</trainability>
            <meatLabel>beef</meatLabel>
            <wildBiomes>
                <AridShrubland>0.05</AridShrubland>
                <TemperateForest>0.1</TemperateForest>
            </wildBiomes>
            <litterSizeCurve>
                <points>
                    <li>(0.5,0)</li>
                    <li>(1,1)</li>
                    <li>(3,1)</li>
                    <li>(3.5,0)</li>
                </points>
            </litterSizeCurve>
            <packAnimal>true</packAnimal>
            <lifeStageAges>
                <li>
                    <def>AnimalBaby</def>
                    <minAge>0</minAge>
                </li>
                <li>
                    <def>AnimalJuvenile</def>
                    <minAge>0.25</minAge>
                </li>
                <li>
                    <def>AnimalAdult</def>
                    <minAge>1.1</minAge>
                    <soundWounded>Pawn_Muffalo_Wounded</soundWounded>
                    <soundDeath>Pawn_Muffalo_Death</soundDeath>
                    <soundCall>Pawn_Muffalo_Call</soundCall>
                    <soundAngry>Pawn_Muffalo_Angry</soundAngry>
                </li>
            </lifeStageAges>
            <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
            <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
            <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
        </race>
        <tradeTags>
            <li>AnimalCommon</li>
            <li>AnimalFarm</li>
        </tradeTags>
    </ThingDef>

